{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/book/index",
      "style": {
        "navigationBarTitleText": "eBook",
        "enablePullDownRefresh": false,
        // 下拉刷新

        "animationType": "pop-in",
        "animationDuration": 300
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationBarTitleText": "search",
        "enablePullDownRefresh": false,
        // 下拉刷新
        "animationType": "pop-in",
        "animationDuration": 300
        // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
        // "transparentTitle":"auto"
      }
    },
	{
	  "path": "pages/search/bookdetail",
	  "style": {
	    "navigationBarTitleText": "search",
	    "enablePullDownRefresh": false,
	    // 下拉刷新
	    "animationType": "pop-in",
	    "animationDuration": 300
	    // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
	    // "transparentTitle":"auto"
	  }
	},
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "mine",
        "enablePullDownRefresh": false,
        // 下拉刷新
        "animationType": "pop-in",
        "animationDuration": 300
        // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
        // "transparentTitle":"auto"
      }
    },
    {
      "path": "pages/read/index",
      "style": {
        "navigationBarTitleText": "read",
        "enablePullDownRefresh": false,
        // 下拉刷新
        "animationType": "pop-in",
        "animationDuration": 300,
		 "onReachBottonDistance":50
        // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
        // "transparentTitle":"auto"
      }
    },
	{
	  "path": "pages/read/local",
	  "style": {
	    "navigationBarTitleText": "read",
	    "enablePullDownRefresh": false,
	    // 下拉刷新
	    "animationType": "pop-in",
	    "animationDuration": 300 
	    // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
	    // "transparentTitle":"auto"
	  }
	},
	{
	  "path": "pages/mine/collect",
	  "style": {
	    "navigationBarTitleText": "read",
	    "enablePullDownRefresh": false,
	    // 下拉刷新
	    "animationType": "pop-in", 
	    "animationDuration": 300 
	    // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
	    // "transparentTitle":"auto"
	  }
	}
  ],
  // 分包加载：此配置在微信小程序里为分包加载，在5+App里始终为整包
  "subPackages": [
    // 用户登录注册修改忘记密码页面
    {
      "root": "pages/user",
      "pages": [
        // 接root包路径
        {
          "path": "login/login",
          "style": {
            "navigationBarTitleText": "用户登录"
          }
        },
        {
          "path": "register/register",
          "style": {
            "navigationBarTitleText": "用户注册"
          }
        },
        {
          "path": "modify/modify",
          "style": {
            "navigationBarTitleText": "密码修改"
          }
        },
        {
          "path": "forgot/forgot",
          "style": {
            "navigationBarTitleText": "忘记密码"
          }
        },
        {
          "path": "info/info",
          "style": {
            "navigationBarTitleText": "信息设置"
          }
        }
      ]
    }
  ],
  "tabBar": {
    "list": [
      {
        "pagePath": "pages/book/index",
        "text": "书架"
      },
      {
        "pagePath": "pages/search/index",
        "text": "发现"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "LM",
    // 导航栏样式，仅支持 default/custom。custom即取消默认的原生导航栏
    "navigationStyle": "custom",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
    // 导航栏透明设置。支持 always 一直透明 / auto 滑动自适应 / none 不透明
    // "transparentTitle":"auto"
  }
}
